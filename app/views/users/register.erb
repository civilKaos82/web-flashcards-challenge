<div class="container">
  <% if @errors %>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>

  <h1>Register</h1>
  <form action="/register" method="post">
    <label>Username</label>
    <br/>
    <input type="text" name="username" />
    <br/><br/>
    <label>Password</label>
    <br/>
    <input type="password" name="password" />
    <br/><br/>
    <input type="submit" value="Register"/>
  </form>
</div>
